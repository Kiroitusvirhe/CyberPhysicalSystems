#include "sam.h"
#define LED_PIN   10  // PB10 → D4 on MKR1010 (Group 1)

void setup() {
  // Enable the APB clock for the PORT module (required for GPIO)
  PM->APBBMASK.reg |= PM_APBBMASK_PORT;
  
  // Configure LED_PIN as OUTPUT - NOTE: PB10 is in Group[1] (Port B)
  PORT->Group[1].DIRSET.reg = (1 << LED_PIN);
}

void loop() {
  // Toggle the LED (if ON→OFF, if OFF→ON)
  PORT->Group[1].OUTTGL.reg = (1 << LED_PIN);
  
  delay(1000);  // Wait 1 second
}
